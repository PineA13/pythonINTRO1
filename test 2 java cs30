//Parrot Trouble
function trouble(talking,hour){
if(talking && (hour<7||hour>20) ){
  return true;
}
  return false;
}
console.log("Question 1"+"\n6 o'clock, talking :"+trouble(true,6)+"\n7 o'clock, talking :" +trouble(true,7)+"\n6 o'clock, not talking :" +trouble(false,6)) //use + concatenation to complete the output to display your result


// Question 2 diff21//Use Math.abs(value) to calculate the absolute (non negative) value of a number
function diff21(n){
 //write function here


diff=Math.abs(21-n)
if (n<21){
  return diff  
}
if (n>21){
  return diff*2
}
  
  
}
  
//call your function here
console.log("Question 2"+"\n"+"Int 13: "+diff21(13)+"\n"+"Int 25: "+diff21(25)) //use + concatenation to complete the output to display your result

// Question 3 makes10
function makes10(a,b){

  if (a+b==10){
      return true;
  }
  else if (a==10 || b==10){
    return true;
}
  return false;
}
console.log("Question 3"+"\n"+"Input: 10+9"+"\n"+makes10(10,9))

// Question 4 nearHundred
function nearHundred(n){
  
hundred=Math.abs(n)

  if (n>=90&&n<=110){
    return true;
}
    return false;


}
console.log("Question 4"+"\n"+"is number within 10 of 100?"+"\n"+"number chosen: 90"+"\n"+nearHundred(90))

// Question 5 sortSum
function sortaSum(a,b){
  
  sum=Math.abs(a+b)
  
  if (a+b>=10&&a+b<=19)
    return 20;
  
  
  
}
console.log("Question 5"+"\n"+"any sum within 10-19 is returned as 20"+"\n"+"10+5="+sortaSum(10,5))

//Question 6 posNeg
function posNeg(a,b,negative){
  
  if (a<0|| b<0 && !negative)
    return true;
  if (a<0 && b<0 && negative)
    return true;
  
}
console.log("Question 6"+"\n"+"Case(1,-1,false)="+posNeg(1,-1,false)+"\n"+"Case(-1,1,false)="+posNeg(-1,1,false)+"\n"+"Case(-1,-1,true)="+posNeg(-1,-1,true))

//Question 7 cigarParty
function cigarParty(cigars,isWeekend){
  
  if (cigars>40 && cigars<60 && !isWeekend){
    return true;
  }
  else if (cigars>40 && isWeekend){
    return true;
  }
  return false
}
console.log("Question 7"+"\n"+"cigarParty(45,not weekend)="+cigarParty(45,false)+"\n"+"cigarParty(95,is weekend)="+cigarParty(95,true))

//Question 8 dateFashion
function dateFashion(you,date){
  
  if (you <= 2 || date <= 2)
    return 0;
  if (you >= 8 || date >= 8)
    return 2;
  else return 1;


}
console.log("Question 8"+"\n"+"you:5 date:9"+"\n"+"result:"+dateFashion(5,9))

//Question 9 squirrelPlay
function squirrelPlay(temp,isSummer){
  if (temp >= 20 && temp <= 25 && !isSummer)
    return true;
  if (temp >=20 && temp <= 30 && isSummer)
    return true;
  else return false;
}
console.log("Question 9"+"\n"+"temp = 27 & not summer:"+squirrelPlay(27,false)+"\n"+"temp 27 & is summer:"+squirrelPlay(27,true))

//Question 10 love7
function love7(a,b){
  
  difference=Math.abs(a-b)
  
  if (a == 7 || b == 7)
    return true;
  else if (a+b == 7)
    return true;
  else if (difference == 7)
    return true;
  else return false;
}
console.log("Question 10"+"\n"+love7(-17,-10))

//Question 11 near10
function near10(num){
  
  
  
  if (num % 10 < 2)
    return true;
  
}
console.log("Question 11"+"\n"+near10(19))
