import easygui as easy
import random
random_num = random.randint(0, 2)
print(random_num)

#program type


#words
noun_1 = ["Dog", "Cat" ,"Student"]
adjective_1 = ["clean", "dirty", "cold"]
verb_1 = ["roll", "shut", "push"]
adverb_1 = ["faster!", "quietly", "nicely"]
interjection_1 = ["Ow!", "Yay!", "Wow!"]




#user choice
noun_1_choice = easy.choicebox("which word would you like to use", "pick a noun:", noun_1)
adjective_1_choice = easy.choicebox("choose a word", "pick a adjective", adjective_1)
verb_1_choice = easy.choicebox("choose a word", "pick a noun:", verb_1)


#madlib
madlib_main = f'this {noun_1_choice} was {verb_1_choice} '

easy.textbox(msg="run", text=madlib_main)


